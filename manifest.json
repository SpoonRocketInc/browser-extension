{
  "manifest_version": 2,
  "name": "SpoonRocket",
  "version": "0.0.9",
  "description" : "Good Food, Fast",
  
  "icons" : {
    "16" : "icons/icon16.png",
    "19" : "icons/icon19.png",
    "32" : "icons/icon32.png",
    "38" : "icons/icon38.png",
    "48" : "icons/icon48.png",
    "64" : "icons/icon64.png",
    "128" : "icons/icon128.png"
  },
  "browser_action" : {
    "default_icon" : {
      "19" : "icons/icon19.png",
      "38" : "icons/icon38.png"
    },
    "default_title" : "SpoonRocket",
    "default_popup" : "popup.html"

  },

  "background" : {
    "scripts" : ["js/firebase.js", "js/moment.min.js", "js/eventPage.js"],
    "persistent" : false
  },
  "permissions": [
    "https://*.spoonrocket.com/",
    "http://*.spoonrocket.com/",
    "alarms",
    "cookies",
    "gcm",
    "notifications",
    "storage",
    "tabs"
  ]


}
